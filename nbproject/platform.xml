<?xml version="1.0" encoding="UTF-8"?>
<project name="platform" default="prepare-build" basedir="..">
    <import file="${basedir}/../nbproject/platform-download.xml"/>
    <target name="check-omics-base" depends="download">
        <condition property="omics-base.missing">
            <not>
                <available file="${basedir}/../omics-base/build"/>
            </not>
        </condition>
    </target>
    <target name="build-omics-base" if="omics-base.missing" depends="check-omics-base">
        <echo message="Invoking build of omics-base!"/>
        <ant antfile="${basedir}/../omics-base/build.xml" inheritall="false" inheritrefs="false" target="build"/>
    </target>
    <target name="prepare-build" depends="build-omics-base">
        
    </target>
</project>